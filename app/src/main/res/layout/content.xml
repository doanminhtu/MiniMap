<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placeName"
        android:text="Name"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placeLocation"
        android:text="Location"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placePhone"
        android:text="Phone"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placeWebsite"
        android:text="Website"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            android:background="#03ff00"
            android:id="@+id/callPlaceButton"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/smsPlaceButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#03ff00"
            android:src="@android:drawable/ic_dialog_email"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/browserPlaceButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#03ff00"
            android:scaleType="fitCenter"
            android:src="@drawable/global" />

        <ImageButton
            android:id="@+id/directionPlaceButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#03ff00"
            android:scaleType="fitCenter"
            android:src="@drawable/direction" />
    </LinearLayout>

</LinearLayout>